@model ShiftScheduler.Models.ScheduleViewModel

<h2>Edit Schedule</h2>

@using (Html.BeginForm("SaveSchedule", "Schedule", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>Day &amp; Time</th>
                <th>Required Skills</th>
                <th>Main Employee</th>
                <th>Backup Employee</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var shift in Model.Shifts)
        {
            <tr>
                <td>@shift.Day @shift.ShiftTime</td>
                <td>
                    @(shift.RequiredSkills.Count > 0
                        ? string.Join(", ", shift.RequiredSkills)
                        : "None")
                </td>
                <td>
                    <select name="main_@shift.Id">
                        @* Build the list of suitable mains *@
                        @{
                            var mains = Model.Employees
                                .Where(e =>
                                    e.Availability.Any(a => a.Day == shift.Day && a.Time == shift.ShiftTime)
                                    && (shift.RequiredSkills.Count == 0
                                        || shift.RequiredSkills.Any(req => e.Skills.Contains(req)))
                                );
                        }
                        @foreach (var emp in mains)
                        {
                            if (shift.AssignedEmployee?.Id == emp.Id)
                            {
                                <option value="@emp.Id" selected="selected">
                                    @emp.Name (@emp.EmploymentType)
                                </option>
                            }
                            else
                            {
                                <option value="@emp.Id">
                                    @emp.Name (@emp.EmploymentType)
                                </option>
                            }
                        }
                    </select>
                </td>
                <td>
                    <select name="backup_@shift.Id">
                        <option value="0">None</option>
                        @{
                            var backs = Model.Employees
                                .Where(e =>
                                    e.Availability.Any(a => a.Day == shift.Day && a.Time == shift.ShiftTime)
                                    && e.Id != shift.AssignedEmployee?.Id
                                );
                        }
                        @foreach (var emp in backs)
                        {
                            if (shift.BackupEmployee?.Id == emp.Id)
                            {
                                <option value="@emp.Id" selected="selected">
                                    @emp.Name (@emp.EmploymentType)
                                </option>
                            }
                            else
                            {
                                <option value="@emp.Id">
                                    @emp.Name (@emp.EmploymentType)
                                </option>
                            }
                        }
                    </select>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Save Changes</button>
    @Html.ActionLink("Cancel", "Index", "Schedule", null, new { @class = "btn btn-default" })
}
