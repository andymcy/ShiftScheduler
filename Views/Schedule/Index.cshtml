@model ShiftScheduler.Models.ScheduleViewModel

<h2>Current Schedule</h2>

<table border="1" cellpadding="4">
    <tr>
        <th>Day & Time</th>
        <th>Required Skills</th>
        <th>Main Employee</th>
        <th>Backup Employee</th>
    </tr>
@foreach (var shift in Model.Shifts)
{
    <tr>
        <td>@shift.Day @shift.ShiftTime</td>
        <td>
            @(shift.RequiredSkills.Count > 0 
                ? string.Join(", ", shift.RequiredSkills) 
                : "None")
        </td>
        <td>
            @(shift.AssignedEmployee != null 
                ? shift.AssignedEmployee.Name + " (" + shift.AssignedEmployee.EmploymentType + ")" 
                : "None")
        </td>
        <td>
            @(shift.BackupEmployee != null 
                ? shift.BackupEmployee.Name + " (" + shift.BackupEmployee.EmploymentType + ")" 
                : "None")
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Edit Schedule", "EditSchedule", "Schedule", null, new { @class = "btn btn-primary" })
</p>
