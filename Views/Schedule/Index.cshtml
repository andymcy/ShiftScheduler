@model ShiftScheduler.Models.ScheduleViewModel
@{
    ViewData["Title"] = "Weekly Schedule";
}

<h2 class="mt-3">Schedule â€“ week of @Model.WeekStartDate:ddd, dd MMM yyyy</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Day</th>
            <th>Time</th>
            <th>Main&nbsp;Employee</th>
            <th>Backup&nbsp;Employee</th>
            <th>Skills</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var row in Model.Shifts)
{
    <tr>
        <td>@row.DayOfWeek</td>
        <td>@row.ShiftTime</td>
        <td>@row.MainEmployee</td>
        <td>@row.BackupEmployee</td>
        <td>@row.RequiredSkills</td>
        <td>
            <a asp-action="Edit" asp-route-id="@row.ShiftId">Edit</a>
        </td>
    </tr>
}
    </tbody>
</table>
